{
  "name": "vite_react_shadcn_ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "build:electron": "tsx scripts/build-electron.ts",
    "watch:electron": "tsx --watch scripts/build-electron.ts",
    "dev": "concurrently -k \"vite\" \"npm:watch:electron\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && npm run build:electron && electron-builder",
    "build:dev": "vite build --mode development",
    "start": "electron .",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.seuorg.clopfocus",
    "files": [
      "dist/**",
      "dist-electron/**",
      "build/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraMetadata": {
      "main": "dist-electron/main.cjs"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "extendInfo": {
        "NSCameraUsageDescription": "Usamos a câmera para monitorar foco durante a sessão."
      }
    }
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.462.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^22.16.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^37.4.0",
    "electron-builder": "^24.0.0",
    "esbuild": "^0.23.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^5.4.19",
    "wait-on": "^8.0.4"
  }
}
